# 1goli Admin Panel - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# Convex (Required)
# ============================================
# Get from: https://dashboard.convex.dev
VITE_CONVEX_URL=your_convex_deployment_url_here
CONVEX_DEPLOYMENT=your_convex_deployment_name

# ============================================
# Email Services (Choose One)
# ============================================

# SendGrid (Recommended)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES
# Get from: AWS IAM Console
AWS_SES_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_SES_REGION=us-east-1

# Mailgun
# Get from: https://app.mailgun.com/app/account/security/api_keys
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# ============================================
# SMS Services (Optional)
# ============================================

# Twilio (Recommended)
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Plivo
# Get from: https://console.plivo.com
PLIVO_AUTH_ID=your_plivo_auth_id_here
PLIVO_AUTH_TOKEN=your_plivo_auth_token_here

# ============================================
# Payment Gateways (Required for Orders)
# ============================================

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Razorpay (India)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# PayPal
# Get from: https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ============================================
# Shipping Carriers (Optional)
# ============================================

# FedEx
# Get from: https://developer.fedex.com
FEDEX_API_KEY=your_fedex_api_key_here
FEDEX_SECRET_KEY=your_fedex_secret_key_here
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number_here

# UPS
# Get from: https://www.ups.com/upsdeveloperkit
UPS_CLIENT_ID=your_ups_client_id_here
UPS_CLIENT_SECRET=your_ups_client_secret_here
UPS_ACCOUNT_NUMBER=your_ups_account_number_here

# DHL
# Get from: https://developer.dhl.com
DHL_API_KEY=your_dhl_api_key_here
DHL_SECRET_KEY=your_dhl_secret_key_here

# ShipStation
# Get from: https://ss.shipstation.com/#/settings/api
SHIPSTATION_API_KEY=your_shipstation_api_key_here
SHIPSTATION_API_SECRET=your_shipstation_api_secret_here

# ============================================
# Analytics (Optional)
# ============================================

# Google Analytics
# Get from: https://analytics.google.com
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
# Get from: https://mixpanel.com/settings/project
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# ============================================
# CRM Integration (Optional)
# ============================================

# Salesforce
# Get from: https://developer.salesforce.com
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# HubSpot
# Get from: https://app.hubspot.com/developer
HUBSPOT_API_KEY=your_hubspot_api_key_here

# ============================================
# Accounting Integration (Optional)
# ============================================

# QuickBooks
# Get from: https://developer.intuit.com
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here

# Xero
# Get from: https://developer.xero.com/myapps
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here

# ============================================
# File Storage (Optional - Convex handles this)
# ============================================

# AWS S3 (Alternative to Convex Storage)
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_aws_access_key_here
AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Cloudinary (Alternative for Images)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# ============================================
# Security (Optional)
# ============================================

# JWT Secret (for custom auth)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters

# ============================================
# Development (Optional)
# ============================================

# Environment
NODE_ENV=development

# Debug Mode
DEBUG=true

# API Base URL
VITE_API_BASE_URL=http://localhost:5173

# ============================================
# Production (Optional)
# ============================================

# When deploying to production, update these:
# VITE_CONVEX_URL=https://your-production-deployment.convex.cloud
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
# NODE_ENV=production
# DEBUG=false

# ============================================
# Notes
# ============================================
# 1. NEVER commit .env files to git
# 2. Add .env to .gitignore
# 3. Use different keys for development and production
# 4. Rotate keys regularly
# 5. Store production keys in secure vault (AWS Secrets Manager, etc.)
# 6. Most integrations can be configured via Admin Panel â†’ Integrations
# 7. Environment variables are for backend/server-side only
# 8. Use VITE_ prefix for client-side variables
